{{ define "extra-head" }}
<style>
    .timestamp {
        color: #aaa;
        font-size: 11px;
    }
    .search-form {
        width: 250px;
    }
</style>
{{ end }}

{{ define "title" }}dkf - forum{{ end }}

{{ define "content" }}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/forum">Forum</a></li>
            <li class="breadcrumb-item active">{{ t "Search" . }}</li>
        </ol>
    </nav>

    {{ if .Data.Search }}
    <div class="pb-2 mb-4 border-bottom">
        <form method="get" class="d-inline search-form">
            <div class="input-group">
                <input type="text" name="search" class="form-control form-control-sm d-inline" value="{{ .Data.Search }}" placeholder="Search" />
                <div class="input-group-append">
                    <button class="btn btn-secondary btn-sm">search</button>
                </div>
            </div>
        </form>
    </div>
    {{ end }}

    {{ if .Data.ForumThreads }}
    <table class="table table-striped">
        <tr>
            <th>Thread name</th>
            <th class="text-center">Messages</th>
            <th>Author</th>
            <th>Last Message</th>
        </tr>
        {{ range .Data.ForumThreads }}
            <tr>
                <td>
                    <a href="/t/{{ .UUID }}">{{ .Name }}</a>
                </td>
                <td class="text-center" style="vertical-align: middle;">{{ .RepliesCount }}</td>
                <td>
                    {{ if .AuthorChatColor }}
                    <a style="color: {{ .AuthorChatColor }};" href="/u/{{ .Author }}">{{ .Author }}</a>
                    {{ else }}
                    <a href="/u/{{ .Author }}">{{ .Author }}</a>
                    {{ end }}
                    <br />
                    {{ if .CreatedAt }}
                    <span class="timestamp">{{ .CreatedAt.Format "Jan 02, 2006 15:04:05" }}</span>
                    {{ end }}
                </td>
                <td>
                    {{ if .LastMsgChatColor }}
                    <a style="color: {{ .LastMsgChatColor }};" href="/u/{{ .LastMsgAuthor }}">{{ .LastMsgAuthor }}</a>
                    {{ else }}
                    <a href="/u/{{ .LastMsgAuthor }}">{{ .LastMsgAuthor }}</a>
                    {{ end }}
                    <br />
                    {{ if .LastMsgCreatedAt }}
                    <span class="timestamp">{{ .LastMsgCreatedAt.Format "Jan 02, 2006 15:04:05" }}</span>
                    {{ end }}
                </td>
            </tr>
        {{ else }}
            <tr>
                <td colspan="4"><em>No thread to display</em></td>
            </tr>
        {{ end }}
    </table>
    {{ else }}
    <p><em>No threads to display</em></p>
    {{ end }}

    {{ if .Data.ForumMessages }}
    <table class="table table-striped">
        <tr>
            <th>Thread name</th>
            <th>Snippet</th>
            <th>Author</th>
        </tr>
        {{ range .Data.ForumMessages }}
            <tr>
                <td><a href="/t/{{ .ThreadUUID }}#{{ .UUID }}">{{ .ThreadName }}</a></td>
                <td>
                    <a href="/t/{{ .ThreadUUID }}#{{ .UUID }}">{{ .Snippet }}</a>
                </td
